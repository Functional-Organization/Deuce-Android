<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.subhipstercollective.deuce.ActivityAddMatch">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_num_sets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    tools:text="Best of\nfive sets" />

                <com.android.musicfx.SeekBarRotator
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal">


                    <org.subhipstercollective.deucelibrary.SeekBarSets
                        android:id="@+id/seek_num_sets"
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="2"
                        android:progress="2" />

                </com.android.musicfx.SeekBarRotator>

                <!--<org.subhipstercollective.deucelibrary.SeekBarSets-->
                <!--android:id="@+id/seek_num_sets"-->
                <!--style="@style/Widget.AppCompat.SeekBar.Discrete"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:max="4"-->
                <!--android:progress="1"-->
                <!--android:rotation="270"/>-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/server"
                    android:textAlignment="center" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:checkedButton="@+id/radio_server_flip">

                    <RadioButton
                        android:id="@+id/radio_server_opponent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/opponent"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radio_server_flip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/flip_coin"
                        android:textColor="#2196F3"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radio_server_me"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/myself"
                        android:textColor="#2196F3"
                        android:textSize="12sp" />
                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <ToggleButton
            android:id="@+id/toggle_margin_sets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="@string/set_margin_2"
            android:textOn="@string/set_margin_1" />

        <Button
            android:id="@+id/button_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/play" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
